<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    tools:context=".activities.VerifTokenActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/solusikataraklogo"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan kode verifikasi yang kami SMS ke no. HP Anda yang terdaftar dibawah ini."
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tvHandphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="081234568902"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASUKKAN KODE"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:inputType="number"
            android:id="@+id/etToken1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:maxLength="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/etToken2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:maxLength="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/etToken3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:maxLength="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/etToken4"
            android:textAlignment="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/etToken5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:maxLength="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/etToken6"
            android:textAlignment="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btKirim"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="KIRIM"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Kirim ulang kode dalam "
            />
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:27"
            />

    </LinearLayout>

</LinearLayout>